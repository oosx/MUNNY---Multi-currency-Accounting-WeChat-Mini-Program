.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.currency-picker {
  width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin: 30rpx auto;
  font-size: 100rpx;
  font-weight: bolder;
  color: #404040;
}

.currency-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.currency-picker-modal.show {
  visibility: visible;
  opacity: 1;
}

.currency-picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
  height: 580rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.currency-picker-gradient {
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  height: 30rpx;
  background: linear-gradient(to bottom, #ffffff, rgba(255, 255, 255, 0));
  pointer-events: none;
  z-index: 1001;
}

.currency-picker-scroll {
  flex: 1;
  overflow-y: auto;
  padding-top: 20rpx;
}

.currency-picker-modal.show .currency-picker-content {
  transform: translateY(0);
}

.currency-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

.currency-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.currency-item {
  width: calc((100% - 40rpx) / 3);
  height: 120rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
}

.currency-item.selected {
  background: #e6f3ff;
  color: #0066cc;
}

.currency-code {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 8rpx;
  text-align: center;
}

.currency-name {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.input-container {
  margin: 30rpx 0;
  border-radius: 12rpx;
  padding: 0rpx;
}

.amount-input {
  height: 120rpx;
  font-size: 128rpx;
  font-weight: bolder;
  text-align: center;
  color: #333333;
}

.datetime-container {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  /* background: #ffffff; */
  border-radius: 12rpx;
}

.datetime-picker {
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
  /* background: #f8f8f8; */
  border-radius: 8rpx;
  flex: 0 0 auto;
}

.datetime-picker-disabled {
  opacity: 0.6;
}

.datetime-label {
  font-size: 32rpx;
  color: #666666;
  margin-right: 0rpx;
}

.datetime-value {
  font-size: 40rpx;
  color: #333333;
  font-weight: 500;
}

.notes-input {
  height: 88rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  color: #333333;
  text-align: center;
}

.placeholder {
  color: #999999;
}

.image-container {
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999999;
}

.image-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.image-preview image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  border-radius: 50%;
  font-size: 28rpx;
}

.submit-btn {
  width: 90%;
  height: 88rpx;
  line-height: 60rpx;
  margin-top: 60rpx;
  color: #404040;
  font-size: 40rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(40, 40, 40, 0.3);
}

.submit-btn-disabled {
  background: #cccccc;
  box-shadow: none;
  color: #ffffff;
}

.submit-btn:active {
  opacity: 0.9;
}
