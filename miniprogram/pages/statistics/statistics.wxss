.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.period-picker {
  width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin: 30rpx auto;
  font-size: 50rpx;
  font-weight: bold;
  color: #333333;
  position: relative;
}

/* 添加自定义箭头样式 */
.period-picker::after {
  content: "";
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #999;
  position: absolute;
  right: -30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.summary-container {
  margin: 30rpx 0;
  border-radius: 12rpx;
  padding: 20rpx;
  min-height: 200rpx;
}

.currency-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.currency-item:last-child {
  border-bottom: none;
}

.currency-code {
  font-size: 32rpx;
  color: #333333;
}

.currency-amount {
  font-size: 60rpx;
  color: #404040;
  font-weight: bold;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.version {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
}
